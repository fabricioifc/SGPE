<% if user_signed_in? %>
  <% if dropdown_autorizacao CourseFormat, CourseModality, CourseOffer, Course, Turma %>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <span class="badge">Gerenciar Cadastros <span class="caret"></span></span>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to t('helpers.links.pages.course_formats'), course_formats_path if can? :read, CourseFormat %></li>
        <li><%= link_to t('helpers.links.pages.course_modalities'), course_modalities_path if can? :read, CourseModality %></li>
        <li><%= link_to t('helpers.links.pages.course_offers'), course_offers_path if can? :read, CourseOffer %></li>
        <li><%= link_to t('helpers.links.pages.courses'), courses_path if can? :read, Course %></li>
        <!-- <li role="presentation" class="divider"></li>
        <li><= link_to t('helpers.links.pages.turmas'), turmas_path if can? :read, Turma %></li> -->
      </ul>
    </li>
  <% end %>
  <% if dropdown_autorizacao Discipline, Grid, Offer %>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <span class="badge">Gerenciar Grades <span class="caret"></span></span>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to t('helpers.links.pages.disciplines'), disciplines_path if can? :read, Discipline %></li>
        <li><%= link_to t('helpers.links.pages.grids'), grids_path if can? :read, Grid %></li>
        <li><%= link_to t('helpers.links.pages.offers'), offers_path if can? :read, Offer %></li>
      </ul>
    </li>
  <% end %>

  <% if (dropdown_autorizacao Coordenador, Offer) || (can? :coordenar, Offer) %>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <span class="badge">Coordenação <span class="caret"></span></span>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to t('helpers.links.pages.coordenadors'), coordenadors_path if can? :read, Coordenador %></li>
        <li><%= link_to t('helpers.links.pages.coordenar'), ofertas_coordenador_path if can? :coordenar, Offer %></li>
      </ul>
    </li>
  <% end %>
<% else %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <span class="badge" style="font-size: 0.9em;">SGPE - Sistema Gerenciador de Planos de Ensino</span>
    </a>
  </li>
<% end %>

