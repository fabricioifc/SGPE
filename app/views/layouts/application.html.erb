<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <title><= content_for?(:title) ? yield(:title) : t('app_name') %></title> -->
    <title><%= page_title default: "#{t('app_name')}" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "PlanoDeEnsinoIF" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>
  <body class="bg">
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main" class="<%= user_signed_in? ? '' : 'bg' %>">
      <%= render 'layouts/messages' %>
      <%= render 'layouts/breadcrumbs' %>
      <%= yield %>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
