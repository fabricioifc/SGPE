<% if user_signed_in? %>

  <% if can? :manage, User %>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
        <span class="badge">
          <i class="fa fa-lock" aria-hidden="true"></i>
          <%= t('helpers.titles.admin') %> <span class="caret"></span>
        </span>
      </a>
      <ul class="dropdown-menu">
        <% if is_admin? %>
          <li>
            <%= link_to rails_admin.dashboard_path do %>
              <i class="fa fa-dashboard" aria-hidden="true"></i>
              <%= t('helpers.links.admin') %>
              <i class="fa fa-lock" aria-hidden="true"></i>
            <% end %>
          </li>
        <% end %>
        <li>
          <%= link_to users_path do %>
            <i class="fa fa-users" aria-hidden="true"></i>
            <%= t('helpers.links.users') %>
            <i class="fa fa-lock" aria-hidden="true"></i>
          <% end %>
        </li>
        <li role="presentation" class="divider"></li>
        <li>
          <%= link_to roles_path do %>
            <i class="fa fa-user-md" aria-hidden="true"></i>
            <%= t('helpers.links.roles') %>
            <i class="fa fa-lock" aria-hidden="true"></i>
          <% end %>
        </li>
        <li>
          <%= link_to perfils_path do %>
            <i class="fa fa-user-md" aria-hidden="true"></i>
            <%= t('helpers.links.perfis') %>
            <i class="fa fa-lock" aria-hidden="true"></i>
          <% end %>
        </li>
      </ul>
    </li>
  <% end %>

  <li class="dropdown">
    <a href="#" class="dropdown-toggle profile-image" data-toggle="dropdown">
      <%= avatar_navbar_image %>
	    <%= current_user.email %> <b class="caret"></b></a>
    </a>
  	<ul class="dropdown-menu">
      <li>
        <%= link_to page_path('about') do %>
        <i class="fa fa-info-circle" aria-hidden="true"></i>
        <%= t('helpers.links.pages.about') %>
        <% end %>
      </li>
      <li>
        <%= link_to user_path(current_user) do %>
        <i class="fa fa-user-md" aria-hidden="true"></i>
        <%= t('helpers.links.pages.profile') %>
        <% end %>
      </li>
      <li role="presentation" class="divider"></li>
      <% if can? :novo, User %>
        <li>
          <%= link_to new_user_invitation_path do %>
            <i class="fa fa-user-plus" aria-hidden="true"></i>
            <%= t('devise.shared.links.convite') %>
            <i class="fa fa-lock" aria-hidden="true"></i>
          <% end %>
        </li>
      <% end %>
      <li>
        <%= link_to edit_user_registration_path do %>
          <i class="fa fa-user" aria-hidden="true"></i>
          <%= t('devise.shared.links.edit_account')%>
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, :method=>'delete' do %>
          <i class="fa fa-sign-out" aria-hidden="true"></i>
          <%= t('devise.shared.links.sign_out') %>
        <% end %>
      </li>
    </ul>
  </li>

<% else %>
  <li>
    <%= link_to new_user_session_path do %>
      <i class="fa fa-sign-in" aria-hidden="true"></i>
      <%= t('devise.shared.links.sign_in') %>
    <% end %>
  </li>
  <!-- <li>
    <= link_to new_user_registration_path do %>
      <i class="fa fa-user-plus" aria-hidden="true"></i>
      <= t('devise.shared.links.sign_up') %>
    < end %>
  </li> -->
<% end %>
