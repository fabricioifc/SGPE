<% if user_signed_in? %>
  <% if is_admin? %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= t('helpers.titles.admin') %> <span class="caret"></span></a>
    <ul class="dropdown-menu">
      <li><%= link_to t('helpers.links.users'), users_path %></li>
      <li><%= link_to t('helpers.links.perfils'), perfils_path %></li>
      <li><%= link_to t('helpers.links.admin'), rails_admin.dashboard_path %></li>
    </ul>
  </li>
  <% end %>
<% end %>

<% if user_signed_in? %>

  <li class="dropdown">
    <a href="#" class="dropdown-toggle profile-image" data-toggle="dropdown">
      <%= avatar_navbar_image %>
	    <%= current_user.email %> <b class="caret"></b></a>
    </a>
  	<ul class="dropdown-menu">
      <li>
        <%= link_to page_path('about') do %>
        <i class="fa fa-info-circle" aria-hidden="true"></i>
        <%= t('helpers.links.pages.about') %>
        <% end %>
      </li>
      <li role="presentation" class="divider"></li>
      <li>
        <%= link_to edit_user_registration_path do %>
          <i class="fa fa-user" aria-hidden="true"></i>
          <%= t('devise.shared.links.edit_account')%>
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, :method=>'delete' do %>
          <i class="fa fa-sign-out" aria-hidden="true"></i>
          <%= t('devise.shared.links.sign_out') %>
        <% end %>
      </li>
    </ul>
  </li>

<% else %>
  <li>
    <%= link_to new_user_session_path do %>
      <i class="fa fa-sign-in" aria-hidden="true"></i>
      <%= t('devise.shared.links.sign_in') %>
    <% end %>
  </li>
  <li>
    <%= link_to new_user_registration_path do %>
      <i class="fa fa-user-plus" aria-hidden="true"></i>
      <%= t('devise.shared.links.sign_up') %>
    <% end %>
  </li>
<% end %>
