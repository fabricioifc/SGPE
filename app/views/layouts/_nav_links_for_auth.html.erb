<% if user_signed_in? %>
  <% if is_admin? %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= t('helpers.titles.admin') %> <span class="caret"></span></a>
    <ul class="dropdown-menu">
      <li><%= link_to t('helpers.links.users'), users_path %></li>
      <li><%= link_to t('helpers.links.admin'), rails_admin.dashboard_path %></li>
    </ul>
  </li>
  <% end %>
<% end %>

<% if user_signed_in? %>

  <li class="dropdown">
    <a href="#" class="dropdown-toggle profile-image" data-toggle="dropdown">
      <%= image_tag current_user.avatar.url(:icon), class: 'img-rounded special-img' if current_user.avatar.present? %>
      <%= gravatar_profile_image_tag(current_user.email, height: 36, class: 'img-rounded special-img') unless current_user.avatar.present? %>
	    <%= current_user.email %> <b class="caret"></b></a>
    </a>
  	<ul class="dropdown-menu">
      <li><%= link_to t('devise.shared.links.edit_account'), edit_user_registration_path %></li>
      <li><%= link_to t('devise.shared.links.sign_out'), destroy_user_session_path, :method=>'delete' %></li>
    </ul>
  </li>

<% else %>
  <li><%= link_to t('devise.shared.links.sign_in'), new_user_session_path %></li>
  <li><%= link_to t('devise.shared.links.sign_up'), new_user_registration_path %></li>
<% end %>
