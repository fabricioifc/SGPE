<% if is_professor? %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Meus planos de ensino</h3>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-condensed">
          <thead>
            <tr>
              <th class="text-center">Aprovados</th>
              <th class="text-center">Pendências</th>
              <th class="text-center">Em análise</th>
              <th class="text-center">Editando</th>
              <th class="text-center">Total</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="text-center"><span class="badge alert-success"><%= planos_aprovados(current_user).count %></span></td>
              <td class="text-center"><span class="badge alert-danger"><%= planos_reprovados(current_user).count %></span></td>
              <td class="text-center"><span class="badge alert-warning"><%= planos_analisando(current_user).count %></span></td>
              <td class="text-center"><span class="badge alert-info"><%= planos_editando(current_user).count %></span></td>
              <td class="text-center"><span class="badge"><%= planos_total(current_user).count %></span></td>
            </tr>
          </tbody>
        </table>
      </div>
      <%= link_to 'Mais Detalhes', planos_professor_path, class: "btn btn-info" %>
    </div>
    <div class="panel-footer clearfix">
      <% total_ofertado_sem_plano = ofertas_sem_plano_por_professor.count %>
      <% if total_ofertado_sem_plano.eql?(1) %>
        <span class="badge alert-warning pull-right"><%= "Existe ainda #{total_ofertado_sem_plano} disciplina sem plano de ensino." %></span>
      <% elsif total_ofertado_sem_plano > 1 %>
        <span class="badge alert-warning pull-right"><%= "Existem ainda #{total_ofertado_sem_plano} disciplinas sem plano de ensino." %></span>
      <% end %>
    </div>
  </div>
<% end %>
