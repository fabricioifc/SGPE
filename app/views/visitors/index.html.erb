<div class="container">

    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>Página inicial</h1>
            <ul class="list-unstyled">
                <li><%= t 'app_name' %></li>
            </ul>

        </div>
    </div>

    <div class="row">
      <%= show_profile_image %>
    </div>

    <div class="row">
      <%- if is_professor? %>
        <% @ofertasCursoProfessor.each do |curso, oferta| %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%= Course.find(curso).name %></h3>
            </div>
            <div class="panel-body">
              <div class='table-responsive'>
                <table class='table table-striped table-bordered table-hover table-condensed'>
                  <thead>
                    <tr>
                      <th>Disciplina</th>
                      <th>Curso</th>
                      <th>Ações</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% oferta.each do |v| %>
                      <tr>
                        <td><%= v.grid_discipline.discipline.title %></td>
                        <td><%= v.offer.grid.course.name %></td>

                        <td><%= link_to 'Planos', offer_offer_discipline_plans_path(
                              :offer_id => v.offer_id,
                              :offer_discipline_id => v.id) %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="panel-footer">

            </div>
          </div>
        <% end %>
      <%- end %>
    </div>

</div>
