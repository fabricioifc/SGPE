<% if can? :aprovar_reprovar, Plan %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Analisar planos</h3>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-condensed">
          <thead>
            <tr>
              <th class="text-center">Aprovados</th>
              <th class="text-center">Com pendências</th>
              <th class="text-center">Em análise</th>
              <th class="text-center">Editando</th>
              <th class="text-center">Total</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="text-center"><span class="badge alert-success"><%= planos_aprovados.count %></span></td>
              <td class="text-center"><span class="badge alert-danger"><%= planos_reprovados.count %></span></td>
              <td class="text-center"><span class="badge alert-warning"><%= planos_analisando.count %></span></td>
              <td class="text-center"><span class="badge alert-info"><%= planos_editando.count %></span></td>
              <td class="text-center"><span class="badge"><%= planos_total.count %></span></td>
            </tr>
          </tbody>
        </table>
      </div>
      <%= link_to get_planos_aprovar_path, class: "btn btn-sm btn-success" do %>
        <i class="fa fa-bars"></i> Mais Detalhes
      <% end %>
    </div>
  </div>
<% end %>
