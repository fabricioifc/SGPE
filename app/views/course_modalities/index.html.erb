<%- model = Course_modality %>

<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">
      <%= t '.title', :default => model.model_name.human.pluralize.titleize %>
    </h3>
    <div class="pull-right">

    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <%= content_tag :table, id: "course_modalities_datatable", class: 'table table-striped table-bordered', role: :datatable, data: { url: course_modalities_path(format: :json)} do %>
        <thead>
          <tr>
                        <th><%= model.human_attribute_name(:sigla) %></th>
                        <th><%= model.human_attribute_name(:description) %></th>
                        <th><%= t('helpers.actions') %></th>
          </tr>
        </thead>
        <tbody>
          <%= content_tag_for(:tr, @course_modalities) do |course_modality| %>
                            <td><%= course_modality.sigla %></td>
                            <td><%= course_modality.description %></td>
                        <td><%= course_modality.decorate.link_show %></td>
            <td><%= course_modality.decorate.link_edit %></td>
            <td><%= course_modality.decorate.link_destroy %></td>
          <% end %>
        </tbody>
      <% end %>
    </div>
  </div>
  <div class="panel-footer clearfix">
    <div class="">
      <%= link_to new_course_modality_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t('.new', :default => t("helpers.titles.new", model: model )) %>
      <% end %>
    </div>
    <div class="pull-right">

    </div>
  </div>
</div>
