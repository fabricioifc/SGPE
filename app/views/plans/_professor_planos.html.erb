<%- if is_professor? %>
  <% @cursos.each do |c| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= c.name %></h3>
        </div>
        <div class="panel-body">
          <%= link_to "Meus planos", plans_by_course_path(c.id), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
<%- end %>
<%- if is_professor? && true == false %>
  <% @ofertasCursoProfessor.each do |curso, oferta| %>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= Course.find(curso).name %></h3>
        </div>
        <div class="panel-body">
          <div class='table-responsive'>
            <table class='table table-striped table-bordered table-hover table-condensed'>
              <thead>
                <tr>
                  <th>Disciplina</th>
                  <th>Ações</th>
                </tr>
              </thead>
              <tbody>
                <% oferta.each do |v| %>
                  <tr>
                    <td><%= v.grid_discipline.discipline.title %></td>
                    <td><%= link_to 'Planos', offer_offer_discipline_plans_path(
                          :offer_id => v.offer_id,
                          :offer_discipline_id => v.id) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="panel-footer">

        </div>
      </div>
    </div>
  <% end %>
<%- end %>
