<div id="loginbox" class="mainbox col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
	<div class="panel panel-primary" >
	    <div class="panel-heading">
	        <div class="panel-title"><%= t(".title") %></div>
	    </div>

	    <div class="panel-body" >
	        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal" })  do |f| %>

						<div class="col-md-12">
							<div class="form-group">
		    				<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-user fa-2"></i></span>
									<%= f.text_field :login, :class => 'form-control', autofocus:true, placeholder:true %>
								</div>
							</div>
						</div>

						<div class="col-md-12">
							<div class="form-group">
		            <div class="input-group">
		                <span class="input-group-addon"><i class="fa fa-lock fa-2"></i></span>
		                <%= f.password_field :password, :class => 'form-control', :placeholder => 'Senha' %>
		            </div>
							</div>
						</div>

						<div class="col-md-12">
		            <div class="form-group">
			            <% if devise_mapping.rememberable? -%>
				            <div class="input-group">
				                <label>
				                  <%= f.check_box :remember_me, checked:true %> <%= f.label :remember_me %>
				                </label>
				            </div>
			            <% end -%>
		            </div>
						</div>

						<div class="col-md-12">
							<div class="form-group">
									<%= f.submit t(".submit"), :class => 'btn btn-primary pull-right btn-block' %>
		          </div>
						</div>

					<% end %>

					<%= render "devise/shared/links_social" %>
        </div>
				<div class="panel-footer">
		    		<%= render "devise/shared/links" %>
				</div>
    </div>
</div>
