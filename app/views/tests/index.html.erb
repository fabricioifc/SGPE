<%- model = Test %>

<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">
      <%= t '.title', :default => model.model_name.human.pluralize.titleize %>
    </h3>
    <div class="pull-right">
      <%= link_to new_test_path do %>
        <span class="glyphicon glyphicon-plus"></span>
        <%= t('.new', :default => t("helpers.titles.new", model: model )) %>
      <% end %>
    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <%= content_tag :table, id: "test_datatable", class: 'table table-striped table-bordered', data: { url: tests_path(format: :json)} do %>
        <thead>
          <tr>
            <th><%= model.human_attribute_name(:title) %></th>
            <th><%= model.human_attribute_name(:body) %></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= content_tag_for(:tr, @tests) do |test| %>
                            <td><%= test.title %></td>
                            <td><%= test.body %></td>
                        <td><%= link_to 'Show', test %></td>
            <td><%= link_to 'Edit', edit_test_path(test) %></td>
            <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tbody>
      <% end %>
    </div>
  </div>
  <div class="panel-footer clearfix">
    <div class="pull-right">
      <%= link_to new_test_path do %>
        <span class="glyphicon glyphicon-plus"></span>
        <%= t('.new', :default => t("helpers.titles.new", model: model.model_name.human.titleize)) %>
      <% end %>
    </div>
  </div>
</div>
