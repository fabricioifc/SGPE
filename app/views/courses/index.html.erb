<%- model = Course %>

<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">
      <%= link_to new_course_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t '.title', :default => model.model_name.human.pluralize %>
      <% end %>
    </h3>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <%= content_tag :table, id: "courses_datatable", class: 'table table-striped table-bordered', role: :datatable, data: { url: courses_path(format: :json)} do %>
        <thead>
          <tr>
            <th><%= model.human_attribute_name(:name) %></th>
            <th><%= model.human_attribute_name(:sigla) %></th>
            <!-- <th><= model.human_attribute_name(:carga_horaria) %></th> -->
            <th><%= model.human_attribute_name(:course_modality_id) %></th>
            <th><%= model.human_attribute_name(:course_format_id) %></th>
            <th><%= model.human_attribute_name(:course_offer_id) %></th>
            <th><%= model.human_attribute_name(:active) %></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody></tbody>
      <% end %>
    </div>
  </div>
  <div class="panel-footer clearfix">
    <div class="">
      <%= link_to new_course_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t('.new', :default => t("helpers.titles.new", model: model.model_name.human.downcase )) %>
      <% end %>
    </div>
    <div class="pull-right">

    </div>
  </div>
</div>
