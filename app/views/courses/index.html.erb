<%- model = Course %>

<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">
      <%= t '.title', :default => model.model_name.human.pluralize.titleize %>
    </h3>
    <div class="pull-right">

    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <%= content_tag :table, id: "courses_datatable", class: 'table table-striped table-bordered', role: :datatable, data: { url: courses_path(format: :json)} do %>
        <thead>
          <tr>
                        <th><%= model.human_attribute_name(:name) %></th>
                        <th><%= model.human_attribute_name(:sigla) %></th>
                        <th><%= model.human_attribute_name(:active) %></th>
                        <th><%= model.human_attribute_name(:carga_horaria) %></th>
                        <th><%= model.human_attribute_name(:CourseModality) %></th>
                        <th><%= model.human_attribute_name(:CourseFormat) %></th>
                        <th><%= model.human_attribute_name(:user) %></th>
                        <th><%= t('helpers.actions') %></th>
          </tr>
        </thead>
        <tbody>
          <%= content_tag_for(:tr, @courses) do |course| %>
                            <td><%= course.name %></td>
                            <td><%= course.sigla %></td>
                            <td><%= course.active %></td>
                            <td><%= course.carga_horaria %></td>
                            <td><%= course.CourseModality %></td>
                            <td><%= course.CourseFormat %></td>
                            <td><%= course.user %></td>
                        <td><%= course.decorate.link_show %></td>
            <td><%= course.decorate.link_edit %></td>
            <td><%= course.decorate.link_destroy %></td>
          <% end %>
        </tbody>
      <% end %>
    </div>
  </div>
  <div class="panel-footer clearfix">
    <div class="">
      <%= link_to new_course_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t('.new', :default => t("helpers.titles.new", model: model )) %>
      <% end %>
    </div>
    <div class="pull-right">

    </div>
  </div>
</div>
