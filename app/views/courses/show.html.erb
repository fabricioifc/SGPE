<div class="page-header">
  <%= link_to courses_path, class: 'btn btn-default' do %>
    <i class='fa fa-list fa-2'></i>
    <%= t('helpers.links.back') %>
  <% end %>
  <%= link_to edit_course_path(@course), class: 'btn btn-primary' do %>
    <i class='fa fa-pencil-square-o fa-2'></i>
    <%= t('helpers.links.edit') %>
  <% end %>
  <h1>Show course</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @course.name %></dd>

  <dt>Sigla:</dt>
  <dd><%= @course.sigla %></dd>

  <dt>Active:</dt>
  <dd><%= @course.active %></dd>

  <dt>Course modality:</dt>
  <dd><%= @course.course_modality %></dd>

  <dt>Course format:</dt>
  <dd><%= @course.course_format %></dd>

  <dt>User:</dt>
  <dd><%= @course.user %></dd>

</dl>
