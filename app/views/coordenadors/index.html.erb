<%- model = Coordenador %>

<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">
      <%= link_to new_coordenador_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t '.title', :default => model.model_name.human.pluralize.titleize %>
      <% end %>
    </h3>
    <div class="pull-right">

    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <%= content_tag :table, id: "coordenadors_datatable", class: 'table table-striped table-bordered', role: :datatable, data: { url: coordenadors_path(format: :json)} do %>
        <thead>
          <tr>
            <th><%= model.human_attribute_name(:name) %></th>
            <th><%= model.human_attribute_name(:course_id) %></th>
            <th><%= model.human_attribute_name(:siape) %></th>
            <th><%= model.human_attribute_name(:dtinicio) %></th>
            <th><%= model.human_attribute_name(:dtfim) %></th>
            <th><%= model.human_attribute_name(:titular) %></th>
            <th title="ResponsÃ¡vel por assinar o plano de ensino.">
              <i class="fa fa-info-circle"></i>
              <%= model.human_attribute_name(:responsavel) %>
            </th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody></tbody>
      <% end %>
    </div>
  </div>
  <div class="panel-footer clearfix">
    <div class="">
      <%= link_to new_coordenador_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t('.new', :default => t("helpers.titles.new", model: model.model_name.human.downcase )) %>
      <% end %>
    </div>
    <div class="pull-right">

    </div>
  </div>
</div>
