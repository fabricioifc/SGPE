<%= bootstrap_form_for(coordenador, local:true, html: { class: "", role: "form" }) do |f| %>
  <%= error_messages_for(coordenador) %>

  <div class="row">
    <div class="col-md-4">
      <%= f.select :user_id,
          User.where.not(confirmed_at: nil).order(:name).collect { |c| ["#{c.name} - #{c.siape}", c.id] },
          { id: :coordenador_user, prompt:true },
          { class: 'form-control select2', autofocus:true } %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :funcao, id: :coordenador_funcao, placeholder:true %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :email, id: :coordenador_email, placeholder:true %>
    </div>

    <div class="col-md-12">
      <%= f.select :course_id, Course.where(active:true).order(:name).collect { |c| [c.name, c.id] }, id: :coordenador_course, prompt:true %>
    </div>
    <!-- <div class="col-md-3">
      <= f.date_select :dtinicio, id: :coordenador_dtinicio, prompt: { day: 'Dia', month: 'Mês', year: 'Ano' }, end_year: Date.today.year + 100 %>
    </div>
    <div class="col-md-3">
      <= f.date_select :dtfim, id: :coordenador_dtfim, prompt: { day: 'Dia', month: 'Mês', year: 'Ano' }, end_year: Date.today.year + 100 %>
    </div> -->
    <div class="col-md-12">
      <%= f.check_box :titular, id: :coordenador_titular %>
      <%= f.check_box :responsavel, id: :coordenador_responsavel %>
    </div>

  </div>

  <hr>

  <div class="row">
    <div class="col-md-12">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
