<%- model_class = User -%>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Profile</h3>
  </div>
  <div class="panel-body">

    <div class="row">

      <div class="col-md-8">

          <% if @user.name %>
            <p class="row">
              <strong class="col-md-2"><%= model_class.human_attribute_name(:name) %>: </strong>
              <span class="col-md-10">
                <span><%= @user.name %></span>
              </span>
            </p>
          <% end %>

          <% if @user.username %>
            <p class="row">
              <strong class="col-md-2"><%= model_class.human_attribute_name(:username) %>: </strong>
              <span class="col-md-10">
                <span><%= @user.username %></span>
              </span>
            </p>
          <% end %>

          <% if @user.name %>
            <p class="row">
              <strong class="col-md-2"><%= model_class.human_attribute_name(:email) %>: </strong>
              <span class="col-md-10">
                <span><%= mail_to @user.email %></span>
              </span>
            </p>
          <% end %>

          <% unless @user.bio.empty? %>
            <p class="row">
              <strong class="col-md-2"><%= model_class.human_attribute_name(:bio) %>: </strong>
              <span class="col-md-10">
                <div style="max-height: 150px; overflow-y: auto; padding: 5px;" class="border border-primary">
                  <%= @user.bio.html_safe %>
                </div>
              </span>
            </p>
          <% end %>

          <% unless current_user.perfils.nil? %>
            <p class="row">
              <strong class="col-md-2"><%= model_class.human_attribute_name(:perfis) %>: </strong>
              <span class="col-md-10">
                <% current_user.perfils.each do |perfil| %>
                  <span class="badge"><%= perfil.name %></span>
                <% end %>
              </span>
            </p>
          <% end %>

      </div>
      <div class="col-md-4">
        <%= image_tag @user.avatar.url(:thumb), class: 'img-thumbnail border border-primary pull-right' %>
      </div>

    </div>

  </div>
  <% if current_user.try(:admin) %>
    <div class="panel-footer">

      <%= form_for(@user)  do |f| %>

        <p>Perfis</p>
        <div class="input-group">
          <%= f.select(:perfil_ids, Perfil.all.collect {|a| [a.name, a.id]}, {},
            class: "select2 form-control", :multiple => true) %>
          <div class="input-group-btn">
            <%= f.submit :class => 'btn btn-primary btn-sm' %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
