<td><%= link_to user.email, user %></td>
<td>
  <%= form_for(user, class: '') do |f| %>
  <div class="input-group">
    <%= f.select(:perfil_ids, Perfil.all.collect {|a| [a.name, a.id]}, {}, class: "select2 form-control", :multiple => true) %>
    <div class="input-group-btn">
      <%= f.submit :class => 'btn btn-primary btn-sm' %>
    </div>
  </div>
  <% end %>
</td>
<td>
  <%= link_to( t('helpers.links.destroy'), user_path(user), :data => { :confirm => "Tem certeza?" }, :method => :delete, :class => 'btn btn-sm btn-danger') unless user == current_user %>
</td>
