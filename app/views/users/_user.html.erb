<td><%= user.name %></td>
<td><%= link_to user.email, user %></td>
<td>
  <%= form_for(user, class: '') do |f| %>
    <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}, {}, class: 'form-control') %>
    <%= f.submit 'Change Role', :class => 'btn btn-primary btn-xs btn-group' %>
  <% end %>
</td>
<td>
  <%= link_to( t('helpers.links.destroy'), user_path(user), :data => { :confirm => "Tem certeza?" }, :method => :delete, :class => 'btn btn-danger') unless user == current_user %>
</td>
