<%- model = Curso -%>

<div class='table-responsive'>
  <table class='table table-striped table-bordered table-hover table-condensed datatable'>
    <thead>
      <tr>
        <th><%= model.human_attribute_name(:title) %></th>
        <th><%= model.human_attribute_name(:sigla) %></th>
        <th><%= model.human_attribute_name(:description) %></th>
        <th class="text-center"><%= model.human_attribute_name(:idativo) %></th>
        <th colspan="3"><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @cursos.each do |curso| %>
        <tr>
          <td><%= curso.title %></td>
          <td><%= curso.sigla %></td>
          <td><%= curso.description %></td>
          <td class="text-center"><%= curso.decorate.active %></td>
          <td><%= curso.decorate.link_show %></td>
          <td><%= curso.decorate.link_edit %></td>
          <td><%= curso.decorate.link_destroy %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
