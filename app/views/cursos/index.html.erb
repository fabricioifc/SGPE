<%- model = Curso -%>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= t '.title', :default => model.model_name.human.pluralize.titleize %>
    </h3>
  </div>
  <div class="panel-body">
    <div id="datatable">
      <%= render 'cursos' %>
    </div>
    <div id="paginator">
      <%= paginate @cursos, :remote => true %>
    </div>
  </div>
  <div class="panel-footer">
    <%= link_to t('.new', :default => t("helpers.titles.new", model: model)), new_curso_path %>
  </div>
</div>
