<%- model = Perfil -%>
<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">
      <%= t '.title', :default => model.model_name.human.pluralize.titleize %>
    </h3>
    <div class="pull-right">

    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <%= content_tag :table, id: 'perfils_datatable', class: 'table table-striped table-bordered', data: { url: perfils_path(format: :json)} do %>
        <thead>
          <tr>
            <th>#</th>
            <th><%= model.human_attribute_name(:name) %></th>
            <th><%= model.human_attribute_name(:idativo) %></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody></tbody>
      <%end%>
    </div>
  </div>
  <div class="panel-footer clearfix">
    <div class="">
      <%= link_to new_perfil_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t('.new', :default => t("helpers.titles.new", model: model.model_name.human.titleize)) %>
      <% end %>
    </div>
  </div>
</div>
