<%- model = CalendarExclude %>

<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">
      <%= link_to new_calendar_exclude_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t '.title', :default => model.model_name.human.pluralize.titleize %>
      <% end %>
    </h3>
    <div class="pull-right">

    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <%= content_tag :table, id: "calendar_excludes_datatable", class: 'table table-striped table-bordered', role: :datatable, data: { url: calendar_excludes_path(format: :json)} do %>
        <thead>
          <tr>
                        <th><%= model.human_attribute_name(:calendar) %></th>
                        <th><%= model.human_attribute_name(:dt_exclusao) %></th>
                        <th><%= t('helpers.actions') %></th>
          </tr>
        </thead>
        <tbody>
          <%= content_tag_for(:tr, @calendar_excludes) do |calendar_exclude| %>
                            <td><%= calendar_exclude.calendar %></td>
                            <td><%= calendar_exclude.dt_exclusao %></td>
                        <td><%= calendar_exclude.decorate.link_show %></td>
            <td><%= calendar_exclude.decorate.link_edit %></td>
            <td><%= calendar_exclude.decorate.link_destroy %></td>
          <% end %>
        </tbody>
      <% end %>
    </div>
  </div>
  <div class="panel-footer clearfix">
    <div class="">
      <%= link_to new_calendar_exclude_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t('.new', :default => t("helpers.titles.new", model: model.model_name.human.downcase )) %>
      <% end %>
    </div>
    <div class="pull-right">

    </div>
  </div>
</div>
