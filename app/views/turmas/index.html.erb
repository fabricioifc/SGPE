<%- model = Turma %>
<!-- < title model.model_name.human.pluralize.titleize %> -->

<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">
      <%= link_to new_turma_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t '.title', :default => model.model_name.human.pluralize %>
      <% end %>
    </h3>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <%= content_tag :table, id: "turmas_datatable", class: 'table table-striped table-bordered', role: :datatable, data: { url: turmas_path(format: :json)} do %>
        <thead>
          <tr>
            <th><%= model.human_attribute_name(:name) %></th>
            <th><%= model.human_attribute_name(:active) %></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody></tbody>
      <% end %>
    </div>
  </div>
  <div class="panel-footer clearfix">
    <div class="">
      <%= link_to new_turma_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t('.new', :default => t("helpers.titles.newa", model: model.model_name.human.downcase )) %>
      <% end %>
    </div>
  </div>
</div>
