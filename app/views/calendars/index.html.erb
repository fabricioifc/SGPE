<%- model = Calendar %>

<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">
      <%= link_to new_calendar_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t '.title', :default => model.model_name.human.pluralize.titleize %>
      <% end %>
    </h3>
    <div class="pull-right">

    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <%= content_tag :table, id: "calendars_datatable", class: 'table table-striped table-bordered', role: :datatable, data: { url: calendars_path(format: :json)} do %>
        <thead>
          <tr>
                        <th><%= model.human_attribute_name(:name) %></th>
                        <th><%= model.human_attribute_name(:offer) %></th>
                        <th><%= model.human_attribute_name(:dt_inicio) %></th>
                        <th><%= model.human_attribute_name(:dt_fim) %></th>
                        <th><%= model.human_attribute_name(:active) %></th>
                        <th><%= t('helpers.actions') %></th>
          </tr>
        </thead>
        <tbody>
          <%= content_tag_for(:tr, @calendars) do |calendar| %>
                            <td><%= calendar.name %></td>
                            <td><%= calendar.offer %></td>
                            <td><%= calendar.dt_inicio %></td>
                            <td><%= calendar.dt_fim %></td>
                            <td><%= calendar.active %></td>
                        <td><%= calendar.decorate.link_show %></td>
            <td><%= calendar.decorate.link_edit %></td>
            <td><%= calendar.decorate.link_destroy %></td>
          <% end %>
        </tbody>
      <% end %>
    </div>
  </div>
  <div class="panel-footer clearfix">
    <div class="">
      <%= link_to new_calendar_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t('.new', :default => t("helpers.titles.new", model: model.model_name.human.downcase )) %>
      <% end %>
    </div>
    <div class="pull-right">

    </div>
  </div>
</div>
