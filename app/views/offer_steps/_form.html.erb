<%= form_for @offer, :url => next_wizard_path, :method => :put do |f| %>

  <% if @offer.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@offer.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @offer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= yield f %>

  <div class="actions">
    <%= f.submit "Continue" %>
    or <%= link_to "skip this step", next_wizard_path %>
  </div>

<% end %>
