<%- model = GridDiscipline %>

<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">
      <%= t '.title', :default => model.model_name.human.pluralize.titleize %>
    </h3>
    <div class="pull-right">

    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <%= content_tag :table, id: "grid_disciplines_datatable", class: 'table table-striped table-bordered', role: :datatable, data: { url: grid_disciplines_path(format: :json)} do %>
        <thead>
          <tr>
                        <th><%= model.human_attribute_name(:year) %></th>
                        <th><%= model.human_attribute_name(:ementa) %></th>
                        <th><%= model.human_attribute_name(:objetivo_geral) %></th>
                        <th><%= model.human_attribute_name(:bib_geral) %></th>
                        <th><%= model.human_attribute_name(:bib_espec) %></th>
                        <th><%= model.human_attribute_name(:grid) %></th>
                        <th><%= model.human_attribute_name(:discipline) %></th>
                        <th><%= t('helpers.actions') %></th>
          </tr>
        </thead>
        <tbody>
          <%= content_tag_for(:tr, @grid_disciplines) do |grid_discipline| %>
                            <td><%= grid_discipline.year %></td>
                            <td><%= grid_discipline.ementa %></td>
                            <td><%= grid_discipline.objetivo_geral %></td>
                            <td><%= grid_discipline.bib_geral %></td>
                            <td><%= grid_discipline.bib_espec %></td>
                            <td><%= grid_discipline.grid %></td>
                            <td><%= grid_discipline.discipline %></td>
                        <td><%= grid_discipline.decorate.link_show %></td>
            <td><%= grid_discipline.decorate.link_edit %></td>
            <td><%= grid_discipline.decorate.link_destroy %></td>
          <% end %>
        </tbody>
      <% end %>
    </div>
  </div>
  <div class="panel-footer clearfix">
    <div class="">
      <%= link_to new_grid_discipline_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t('.new', :default => t("helpers.titles.new", model: model )) %>
      <% end %>
    </div>
    <div class="pull-right">

    </div>
  </div>
</div>
