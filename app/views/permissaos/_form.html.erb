<%= bootstrap_form_for(permissao, local: true) do |form| %>

  <%= form.text_field :name, id: :permissao_name %>
  <!-- <= form.text_field :classe, id: :permissao_classe %> -->
  <%= form.collection_select :classe, get_models, :to_s, :to_s, { :prompt => true }, { :class => 'form-control' } %>

  <!-- <= form.text_field :acao, id: :permissao_acao %> -->
  <%= form.collection_select :acao, Permissao::ACTIONS, :first, :last, { :prompt => true }, { :class => 'form-control' } %>

  <%= form.check_box :idativo, id: :permissao_idativo %>

  <%= form.submit %>
<% end %>
