<%= bootstrap_form_for(offer, local:true, html: { class: "", role: "form" }) do |f| %>
  <%= error_messages_for(offer) %>

  <div class="row">
    <div class="col-md-3">
      <%= f.number_field :year, id: :offer_year, autofocus:true, placeholder:true %>
    </div>
    <div class="col-md-3">
      <%= f.number_field :semestre, id: :offer_semestre, placeholder:'1,2,3...' %>
    </div>
    <div class="col-md-3">
      <%= f.select :type, Offer.offer_types.keys, id: :offer_type, prompt: true %>
    </div>
    <div class="col-md-3">
      <%= f.select :course_id, @cursos.collect { |c| [c.name, c.id] }, id: :offer_course_id, prompt: true %>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading clearfix">
      <div class="row">
        <div class="col-md-4">
          <!-- <span>Ofertar disciplinas da grade</span> -->
          <!-- <= label_tag :grid %> -->
          <%= select_tag :grid, options_for_select(Grid.all.collect { |c| ["#{c.year} - #{c.course.name}", c.id] }),
            data: { remote: true, url: load_grid_offers_path, method: :patch },
            id: :grid, class: 'form-control', prompt:'Selecione a grade' %>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="row">
        <div id="grid_disciplines_partial">

        </div>
      </div>
    </div>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
