<%- model = Role -%>
<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">
      <%= link_to new_role_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t '.title', :default => model.model_name.human %>
      <% end %>
    </h3>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <%= content_tag :table, id: 'roles_datatable', class: 'table table-striped table-bordered', data: { url: roles_path(format: :json)} do %>
        <thead>
          <tr>
            <th><%= model.human_attribute_name(:name) %></th>
            <th><%= model.human_attribute_name(:resource_type) %></th>
            <th><%= model.human_attribute_name(:resource_id) %></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody></tbody>
      <%end%>
    </div>
  </div>
  <div class="panel-footer clearfix">
    <div class="">
      <%= link_to new_role_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t('.new', :default => t("helpers.titles.new", model: model.model_name.human)) %>
      <% end %>
    </div>
  </div>
</div>
