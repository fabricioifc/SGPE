<ol class="breadcrumb">
  <li>Step 1</li>
  <li class='active'>Step 2</li>
  <li>Step 3</li>
  <li>Step 4</li>
</ol>

<p>Grade: <%= @offer_wizard.grid_id unless @offer_wizard.nil? %></p>

<%= form_for @offer_wizard, as: :offer_wizard, url: validate_step_wizard_path do |f| %>
  <% if @offer_wizard.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@offer_wizard.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @offer_wizard.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= hidden_field_tag :current_step, 'step2' %>

  <% if !@anos.nil? && !@anos.empty? %>
    <%= f.select :grid_year, options_for_select(@anos), class: 'form-control' %>
  <% end %>

  <% if !@semestres.nil? && !@semestres.empty? %>
    <%= f.select :grid_semestre, options_for_select(@semestres), class: 'form-control' %>
  <% end %>

  <%= f.submit 'Continue' %>
<% end %>
