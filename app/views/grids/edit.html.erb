<%- model = Grid %>

<div class="well well-sm">
  <!-- <= link_to t('helpers.links.back'), discipline_path %> -->
  <%= link_to grids_path, class: 'btn btn-xs btn-default' do %>
    <i class='fa fa-list fa-2'></i>
    <%= t('helpers.links.back') %>
  <% end %>
  <%= link_to @grid, class: 'btn btn-xs btn-info' do %>
    <i class="fa fa-info fa-2" aria-hidden="true"></i>
    <%= t('helpers.links.show') %>
  <% end %>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= t('helpers.titles.edit', model: model.model_name.human) %>
    </h3>
  </div>
  <div class="panel-body">
    <%= render 'form', grid: @grid %>
  </div>
</div>
