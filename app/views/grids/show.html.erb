<div class="page-header">
  <%= link_to grids_path, class: 'btn btn-default' do %>
    <i class='fa fa-list fa-2'></i>
    <%= t('helpers.links.back') %>
  <% end %>
  <%= link_to edit_grid_path(@grid), class: 'btn btn-primary' do %>
    <i class='fa fa-pencil-square-o fa-2'></i>
    <%= t('helpers.links.edit') %>
  <% end %>
  <h1>Show grid</h1>
</div>

<dl class="dl-horizontal">
  <dt>Year:</dt>
  <dd><%= @grid.year %></dd>

  <dt>Active:</dt>
  <dd><%= @grid.active %></dd>

  <dt>Course:</dt>
  <dd><%= @grid.course %></dd>

</dl>
