<% if obj.errors.any? %>
  <div id="error_expl" class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title">
        <% if obj.errors.count > 1 %>
          <%= obj.errors.count %> erros encontrados:
        <% else %>
          <%= obj.errors.count %> erro encontrado:
        <% end %>
      </h3>
    </div>
    <div class="panel-body">
      <ul class="list-group" style="margin: 0; max-height: 150px; overflow-y:auto;">
        <% obj.errors.full_messages.each do |msg| %>
          <li class="list-group-item">
            <i class="fa fa-angle-right"></i> <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
